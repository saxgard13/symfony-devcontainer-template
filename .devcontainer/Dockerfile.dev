ARG PHP_VERSION=8.3
ARG NODE_VERSION=22

FROM php:${PHP_VERSION}-cli

# Re-declare ARG after FROM (they don't persist across stages)
ARG NODE_VERSION

# Install system dependencies, Node.js, Symfony CLI in a single layer
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        git \
        nano \
        openssh-client \
        unzip \
        wget \
        zip \
    # Install Node.js
    && curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash - \
    && apt-get install -y --no-install-recommends nodejs \
    # Install Symfony CLI
    && curl -sS https://get.symfony.com/cli/installer | bash \
    && mv /root/.symfony5/bin/symfony /usr/local/bin/symfony \
    && rm -rf /root/.symfony5 \
    # Cleanup
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Install PHP extensions (separate layer for better caching)
COPY --from=mlocati/php-extension-installer /usr/bin/install-php-extensions /usr/local/bin/
RUN install-php-extensions \
    bcmath \
    gd \
    intl \
    opcache \
    pdo_mysql \
    xdebug \
    zip

# Copy config files and binaries (COPY uses minimal layers)
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer
COPY .devcontainer/config/php.ini /usr/local/etc/php/php.ini
COPY .devcontainer/config/php.ini-development /usr/local/etc/php/php.ini-development

# Create non-root user
RUN groupadd -g 1000 vscode \
    && useradd -u 1000 -g vscode -m vscode

USER vscode
WORKDIR /workspace
